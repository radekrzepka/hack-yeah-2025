{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "drizzle.config.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    ".nestjs-cli.json"
  ]
}
