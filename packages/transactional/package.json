{
  "name": "@hackathon/transactional",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build:ts": "tsc --emitDeclarationOnly",
    "build:cjs": "esbuild src/index.ts --bundle --format=cjs --target=es2022 --outfile=dist/index.cjs --platform=node --sourcemap --loader:.tsx=tsx --tree-shaking=true",
    "build:mjs": "esbuild src/index.ts --bundle --format=esm --target=es2022 --outfile=dist/index.mjs --platform=node --sourcemap --loader:.tsx=tsx --tree-shaking=true",
    "build:ts:watch": "tsc --emitDeclarationOnly --watch --preserveWatchOutput",
    "build:cjs:watch": "esbuild src/index.ts --bundle --format=cjs --target=es2022 --outfile=dist/index.cjs --platform=node --sourcemap --watch --loader:.tsx=tsx --tree-shaking=true",
    "build:mjs:watch": "esbuild src/index.ts --bundle --format=esm --target=es2022 --outfile=dist/index.mjs --platform=node --sourcemap --watch --loader:.tsx=tsx --tree-shaking=true",
    "build": "npm-run-all --parallel build:ts build:cjs build:mjs",
    "dev": "email dev --port 3002 --dir src/emails",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@hackathon/domain": "workspace:*",
    "@hackathon/eslint-config": "workspace:*",
    "@hackathon/typescript-config": "workspace:*",
    "react-email": "3.0.7"
  },
  "dependencies": {
    "@react-email/components": "0.0.33",
    "@types/react": "18.3.1",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
