{
  "name": "@hackathon/shared",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build:ts": "tsc --emitDeclarationOnly",
    "build:cjs": "esbuild src/index.ts --bundle --minify --format=cjs --target=es2022 --outfile=dist/index.cjs --platform=node --sourcemap --tree-shaking=true",
    "build:mjs": "esbuild src/index.ts --bundle --minify --format=esm --target=es2022 --outfile=dist/index.mjs --platform=node --sourcemap --tree-shaking=true",
    "build:ts:watch": "tsc --emitDeclarationOnly --watch --preserveWatchOutput",
    "build:cjs:watch": "esbuild src/index.ts --bundle --minify --format=cjs --target=es2022 --outfile=dist/index.cjs --platform=node --sourcemap --watch --tree-shaking=true",
    "build:mjs:watch": "esbuild src/index.ts --bundle --minify --format=esm --target=es2022 --outfile=dist/index.mjs --platform=node --sourcemap --watch --tree-shaking=true",
    "build": "npm-run-all --parallel build:ts build:cjs build:mjs",
    "dev": "npm-run-all --parallel build:ts:watch build:cjs:watch build:mjs:watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "generate-types": "swagger-typescript-api generate -p http://localhost:4000/api-json -o ./src/api-types -n dto.ts --no-client"
  },
  "devDependencies": {
    "@hackathon/domain": "workspace:*",
    "@hackathon/eslint-config": "workspace:*",
    "@hackathon/typescript-config": "workspace:*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^22.9.1",
    "eslint": "8.57.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "esbuild": "^0.25.0",
    "i": "^0.3.7",
    "npm": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "swagger-typescript-api": "^13.0.23",
    "zod": "^3.24.1"
  }
}
