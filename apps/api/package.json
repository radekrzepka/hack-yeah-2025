{
  "name": "@hackathon/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "dev": "nest start --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "jest --passWithNoTests --runInBand --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.750.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.0.3",
    "@react-email/render": "^1.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.4",
    "drizzle-orm": "^0.39.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "puppeteer": "^24.23.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "stripe": "^17.7.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@hackathon/db": "workspace:*",
    "@hackathon/domain": "workspace:*",
    "@hackathon/eslint-config": "workspace:*",
    "@hackathon/shared": "workspace:*",
    "@hackathon/transactional": "workspace:*",
    "@hackathon/typescript-config": "workspace:*",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/xlsx": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
